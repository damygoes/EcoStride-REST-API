{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "dom"],
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["src/**/*"]
}
